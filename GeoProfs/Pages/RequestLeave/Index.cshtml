                        <label for="personal">personal</label>
                    <hr>
                    <form>
                        <label for="datemin">Enter your leave date:</label><br>
                        <input type="date" id="datemin" name="datemin" min="2023-00-00"><br>
                        <label for="datemax">Enter your return date:</label><br>
                        <input type="date" id="datemin" name="datemax" min="2023-00-00">
                    </form>
                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Submit">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

